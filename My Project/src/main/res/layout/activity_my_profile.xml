<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#8DE65D"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MyProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_update_my_proflie"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/student_icon"
        />
    <EditText
        android:id="@+id/edt_update_full_name_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full name"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/edt_update_email_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btn_update_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update profile"
        android:layout_marginTop="20dp"/>

</LinearLayout>