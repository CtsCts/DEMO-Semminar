<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/image_avatar_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/student_icon" />

    <TextView
        android:id="@+id/txt_name_avatar_user"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/image_avatar_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#710202"/>

    <TextView
        android:id="@+id/txt_born_avatar_user"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/image_avatar_user"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="1900"
        android:textSize="20sp"

        android:layout_below="@+id/txt_name_avatar_user"
    />

    <TextView
        android:id="@+id/txt_class_avatar_user"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_avatar_user"
        android:layout_marginStart="50dp"
        android:layout_toRightOf="@+id/txt_born_avatar_user"
        android:text="vtd1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_email_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_avatar_user"
        android:layout_below="@+id/txt_born_avatar_user"
        android:layout_marginStart="10dp"
        android:text="than1@gmail.com"
        android:textSize="20sp" />



</RelativeLayout>